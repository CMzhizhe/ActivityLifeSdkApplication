<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_process_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_dialog_line"
        android:background="#E1E1E1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:text="点击我弹出dialog"
        android:id="@+id/tv_dialog"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <View
        android:id="@+id/view_popuwindow_line"
        android:background="#E1E1E1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:text="点击我弹出popuwindow"
        android:id="@+id/tv_popuwindow"
        android:gravity="center"
        android:textColor="#333333"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <View
        android:id="@+id/view_dialog_acitivty_line"
        android:background="#E1E1E1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:text="点击我出dialogActivity"
        android:id="@+id/tv_dialog_acitivty"
        android:gravity="center"
        android:textColor="#333333"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>